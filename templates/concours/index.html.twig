{% extends 'dashboard.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="page-header">
        <h3 class="page-title"> Concours </h3>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <a class="nav-link btn btn-success create-new-button"  href="{{ path('ajouter_concours') }}"> + Ajouter nouveau concours </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Created</th>
                                <th>nb_views</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for concours in concours %}
                                <tr>
                                    <td>{{ concours.title }}</td>
                                    <td>{{ concours.getContent | raw }} </td>
                                    <td>{{ concours.date | date('F d, Y') }}</td>
                                    <td>{{ concours.nbViews}}</td>
                                    <td>
                                        <a class="btn btn-primary"  href="{{path('modifier_concours',{'id': concours.id})}}" >modifier</a>
                                    </td>
                                    <td>
                                        <form method="post"  action="{{ path('supprimer_concours' , {'id' : concours.id}) }}" onsubmit="return confirm('Voulez vous supprimer ?')">
                                            <input type="hidden" name="_method" value="SUP">
                                            <input type="hidden" name="_token" value="">
                                            <input type="submit" class="btn btn-danger" value="supprimer">
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
