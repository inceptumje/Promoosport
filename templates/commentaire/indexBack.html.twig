{% extends 'dashboard.html.twig' %}

{% block title %}Les Commentaires{% endblock %}

{% block body %}
    <div class="page-header">
        <h3 class="page-title"> Les Commentaires </h3>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Contenu</th>
                                <th>created At</th>
                                <th>owner</th>
                                <th>article</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for com in commentaires %}
                                <tr>
                                    <td>{{ com.contenu }}</td>
                                    <td> {{ com.createdAt | date('y-m-d h:i:s') }} </td>
                                    <td> {{ com.utilisateur.username }} </td>
                                    <td> {{ com.article.title }} </td>
                                    <td>
                                        <form method="post"  action="{{ path('supprimer_commentaire' , {'id' : com.id}) }}" onsubmit="return confirm('Voulez vous supprimer ?')">
                                            <input type="hidden" name="_method" value="SUP">
                                            <input type="hidden" name="_token" value="">
                                            <input type="submit" class="btn btn-danger" value="supprimer">
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
