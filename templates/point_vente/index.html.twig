{% extends 'Dashboard.html.twig' %}

{% block title %}Pointe de vente{% endblock %}

{% block body %}

    <div class="page-header">
        <h3 class="page-title"> Pointe de vente </h3>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <a class="nav-link btn btn-success create-new-button"  href="{{ path('ajouter_pv') }}"> + Ajouter nouveau Pointe de vente </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>state</th>
                                <th>client</th>
                                <th>code</th>
                                <th>latitude</th>
                                <th>longitude</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for pv in pv %}
                                <tr>
                                    <td>{{ pv.state }}</td>
                                    <td>{{ pv.client }}</td>
                                    <td>
                                        {{ pv.code }}
                                    </td>
                                    <td>
                                        {{ pv.lat }}
                                    </td>
                                    <td>
                                        {{ pv.lon }}
                                    </td>
                                    <td>
                                        <a class="btn btn-primary"  href="{{path('modifier_pv',{'id': pv.id})}}" >modifier</a>
                                    </td>
                                    <td>
                                        <form method="post"  action=" {{ path('supprimer_pv' , {'id' : pv.id})}}" onsubmit="return confirm('Voulez vous supprimer ?')">
                                            <input type="hidden" name="_method" value="SUP">
                                            <input type="hidden" name="_token" value="">
                                            <input type="submit" class="btn btn-danger" value="supprimer">
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
